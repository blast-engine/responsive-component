{
  "name": "@blast-engine/responsive-component",
  "version": "2.0.2",
  "main": "dist/bundle.js",
  "homepage": "https://github.com/blast-engine/responsive-component",
  "scripts": {
    "test": "jest",
    "test:watch": "node ./scripts/test.js --watch",
    "test:debug": "node --inspect-brk ./scripts/test.js --watch",
    "build": "webpack",
    "build:watch": "webpack --watch",
    "npm-publish": "yarn version --patch; yarn publish --access public"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,mjs}"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.{js,jsx,mjs}",
      "<rootDir>/src/**/?(*.)(spec|test).{js,jsx,mjs}"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(js|jsx|mjs)$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|mjs)$"
    ],
    "moduleFileExtensions": [
      "web.js",
      "mjs",
      "js",
      "json",
      "web.jsx",
      "jsx",
      "node"
    ]
  },
  "devDependencies": {
    "@babel/cli": "7.14.5",
    "@babel/core": "7.14.5",
    "@babel/node": "7.14.5",
    "@babel/plugin-proposal-class-properties": "7.13.0",
    "@babel/plugin-proposal-private-methods": "7.14.5",
    "@babel/plugin-proposal-private-property-in-object": "7.14.5",
    "@babel/preset-react": "7.14.5",
    "@blast-engine/utils": "^2.0.0",
    "babel-jest": "27.0.2",
    "babel-loader": "8.2.2",
    "babel-plugin-module-resolver": "4.1.0",
    "babel-plugin-named-asset-import": "0.3.7",
    "babel-plugin-transform-class-properties": "6.24.1",
    "babel-runtime": "6.26.0",
    "jest": "20.0.4",
    "react": "^16.8.6",
    "webpack": "^4.25.1",
    "webpack-cli": "^3.1.2",
    "webpack-node-externals": "^1.7.2"
  }
}
